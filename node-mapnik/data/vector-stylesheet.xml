<?xml version="1.0" encoding="utf-8"?>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">

    <Layer name="land" 
        srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
        <Datasource>
            <Parameter name="file">world_merc.shp</Parameter>
            <Parameter name="encoding">iso-8859-1</Parameter>
            <Parameter name="type">shape</Parameter>
        </Datasource>
    </Layer>

    <Layer name="admin"
    srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
        <Datasource>
        <Parameter name="type">postgis</Parameter>
        <Parameter name="table">(SELECT geometry,id,osm_id,name,type,admin_level FROM import.osm_admin) AS data</Parameter>
        <Parameter name="extent_cache">dynamic</Parameter>
        <Parameter name="host">postgis</Parameter>
        <Parameter name="dbname">vector</Parameter>
        <Parameter name="user">postgres</Parameter>
        </Datasource>
    </Layer>

    <Layer name="admin_gen"
    srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
        <Datasource>
        <Parameter name="type">postgis</Parameter>
        <Parameter name="table">(SELECT ST_SimplifyPreserveTopology(geometry, 500) as geometry,id,osm_id,name,type,admin_level FROM import.osm_admin) AS data</Parameter>
        <Parameter name="extent_cache">dynamic</Parameter>
        <Parameter name="host">postgis</Parameter>
        <Parameter name="dbname">vector</Parameter>
        <Parameter name="user">postgres</Parameter>
        </Datasource>
    </Layer>


    <Layer name="buildings"
    srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
        <Datasource>
        <Parameter name="type">postgis</Parameter>
        <Parameter name="table">(SELECT geometry,id,osm_id,name,type FROM import.osm_buildings) AS data</Parameter>
        <Parameter name="extent_cache">dynamic</Parameter>
        <Parameter name="host">postgis</Parameter>
        <Parameter name="dbname">vector</Parameter>
        <Parameter name="user">postgres</Parameter>
        </Datasource>
    </Layer>

    <Layer name="roads"
    srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">
        <Datasource>
        <Parameter name="type">postgis</Parameter>
        <Parameter name="table">(SELECT geometry,id,osm_id,name,type FROM import.osm_roads) AS data</Parameter>
        <Parameter name="extent_cache">dynamic</Parameter>
        <Parameter name="host">postgis</Parameter>
        <Parameter name="dbname">vector</Parameter>
        <Parameter name="user">postgres</Parameter>
        </Datasource>
    </Layer>

</Map>
